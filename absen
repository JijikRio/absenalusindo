<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistem Presensi Real-time</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- React & Babel -->
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; }
        .glass-effect { background: rgba(255, 255, 255, 0.8); backdrop-filter: blur(12px); }
    </style>
</head>
<body class="bg-slate-50 text-slate-900">
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useRef, useEffect } = React;

        // --- KONFIGURASI ---
        const APP_SCRIPT_URL = 'URL_WEB_APP_SCRIPT_ANDA'; // GANTI DENGAN URL DEPLOY ANDA

        function App() {
            const [user, setUser] = useState(null);
            const [view, setView] = useState('login'); // login, dashboard, camera, admin
            const [loading, setLoading] = useState(false);
            const [message, setMessage] = useState(null);
            const [location, setLocation] = useState({ address: 'Mencari lokasi...', coords: null });
            const [attendanceType, setAttendanceType] = useState('IN');

            const videoRef = useRef(null);
            const canvasRef = useRef(null);

            // Inisialisasi Ikon Lucide
            useEffect(() => { lucide.createIcons(); }, [view, user]);

            const showMsg = (type, text) => {
                setMessage({ type, text });
                setTimeout(() => setMessage(null), 5000);
            };

            // --- Geolocation ---
            const getGeoLocation = () => {
                if (!navigator.geolocation) {
                    showMsg('error', 'GPS tidak didukung di browser ini');
                    return;
                }
                navigator.geolocation.getCurrentPosition(async (pos) => {
                    const { latitude, longitude } = pos.coords;
                    try {
                        const res = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${latitude}&lon=${longitude}`);
                        const data = await res.json();
                        setLocation({ address: data.display_name, coords: `${latitude}, ${longitude}` });
                    } catch (err) {
                        setLocation({ address: `Lat: ${latitude}, Long: ${longitude}`, coords: `${latitude}, ${longitude}` });
                    }
                }, () => showMsg('error', 'Gagal mengakses GPS. Izinkan lokasi!'));
            };

            // --- Auth ---
            const handleLogin = async (e) => {
                e.preventDefault();
                setLoading(true);
                const id = e.target.id.value;
                const password = e.target.password.value;

                try {
                    const res = await fetch(APP_SCRIPT_URL, {
                        method: 'POST',
                        body: JSON.stringify({ action: 'login', id, password })
                    });
                    const data = await res.json();
                    if (data.success) {
                        setUser(data.user);
                        setView('dashboard');
                    } else {
                        showMsg('error', data.message);
                    }
                } catch (err) {
                    showMsg('error', 'Koneksi ke server gagal');
                }
                setLoading(false);
            };

            // --- Camera ---
            const startCamera = async () => {
                setView('camera');
                getGeoLocation();
                setTimeout(async () => {
                    try {
                        const stream = await navigator.mediaDevices.getUserMedia({ 
                            video: { facingMode: 'user' }, 
                            audio: false 
                        });
                        if (videoRef.current) videoRef.current.srcObject = stream;
                    } catch (err) {
                        showMsg('error', 'Gagal akses kamera');
                        setView('dashboard');
                    }
                }, 300);
            };

            const captureAndSubmit = async () => {
                setLoading(true);
                const video = videoRef.current;
                const canvas = canvasRef.current;
                const ctx = canvas.getContext('2d');

                // Draw
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

                // Watermark
                ctx.fillStyle = "rgba(0, 0, 0, 0.6)";
                ctx.fillRect(0, canvas.height - 100, canvas.width, 100);
                ctx.fillStyle = "white";
                ctx.font = "bold 16px Arial";
                const now = new Date();
                ctx.fillText(`NAMA: ${user.nama} | ID: ${user.id}`, 20, canvas.height - 75);
                ctx.fillText(`WAKTU: ${now.toLocaleString('id-ID')}`, 20, canvas.height - 55);
                
                ctx.font = "12px Arial";
                const addrWords = location.address.split(', ');
                ctx.fillText(`LOKASI: ${addrWords.slice(0, 3).join(', ')}`, 20, canvas.height - 35);
                ctx.fillText(`${addrWords.slice(3, 6).join(', ')}`, 20, canvas.height - 15);

                const imageData = canvas.toDataURL('image/png');

                try {
                    const res = await fetch(APP_SCRIPT_URL, {
                        method: 'POST',
                        body: JSON.stringify({
                            action: 'submitAttendance',
                            id: user.id,
                            nama: user.nama,
                            tipe: attendanceType,
                            foto: imageData,
                            alamat: location.address
                        })
                    });
                    const result = await res.json();
                    if (result.success) {
                        showMsg('success', `Berhasil Absen ${attendanceType}! ${result.lembur > 0 ? 'Lembur: Rp' + result.lembur.toLocaleString() : ''}`);
                        video.srcObject.getTracks().forEach(track => track.stop());
                        setView('dashboard');
                    }
                } catch (err) {
                    showMsg('error', 'Gagal mengirim data');
                }
                setLoading(false);
            };

            // --- Views ---
            if (view === 'login') {
                return (
                    <div className="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-blue-600 to-indigo-800">
                        <div className="max-w-md w-full bg-white rounded-[2.5rem] shadow-2xl p-10">
                            <div className="text-center mb-10">
                                <div className="bg-blue-100 w-20 h-20 rounded-3xl flex items-center justify-center mx-auto mb-6">
                                    <i data-lucide="shield-check" class="text-blue-600 w-10 h-10"></i>
                                </div>
                                <h1 className="text-3xl font-bold text-slate-800 tracking-tight">Presensi Digital</h1>
                                <p className="text-slate-500 mt-2">Selamat datang kembali!</p>
                            </div>
                            <form onSubmit={handleLogin} className="space-y-5">
                                <div className="space-y-2">
                                    <label className="text-sm font-semibold text-slate-700 ml-1">ID Karyawan</label>
                                    <input name="id" type="text" required className="w-full px-5 py-4 rounded-2xl bg-slate-50 border-none focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="Masukkan ID Anda" />
                                </div>
                                <div className="space-y-2">
                                    <label className="text-sm font-semibold text-slate-700 ml-1">Password</label>
                                    <input name="password" type="password" required className="w-full px-5 py-4 rounded-2xl bg-slate-50 border-none focus:ring-2 focus:ring-blue-500 transition-all outline-none" placeholder="••••••••" />
                                </div>
                                <button disabled={loading} className="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 rounded-2xl transition-all shadow-lg shadow-blue-200 flex items-center justify-center gap-3">
                                    {loading ? <div className="animate-spin rounded-full h-5 w-5 border-2 border-white border-t-transparent"></div> : 'MASUK'}
                                </button>
                            </form>
                            {message && <div className={`mt-6 p-4 rounded-2xl text-sm text-center font-medium ${message.type === 'error' ? 'bg-red-50 text-red-600' : 'bg-green-50 text-green-600'}`}>{message.text}</div>}
                        </div>
                    </div>
                );
            }

            return (
                <div className="min-h-screen flex flex-col max-w-md mx-auto bg-white shadow-2xl relative overflow-hidden">
                    {/* Header */}
                    <div className="p-6 pt-8 flex justify-between items-center bg-white sticky top-0 z-10">
                        <div>
                            <p className="text-xs font-bold text-blue-600 uppercase tracking-widest mb-1">KARYAWAN AKTIF</p>
                            <h2 className="text-xl font-bold text-slate-800">{user.nama}</h2>
                        </div>
                        <button onClick={() => setUser(null)} className="w-12 h-12 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-400 hover:text-red-500 transition-all">
                            <i data-lucide="log-out" class="w-5 h-5"></i>
                        </button>
                    </div>

                    <div className="flex-1 p-6 space-y-6 overflow-y-auto">
                        {message && (
                            <div className={`p-5 rounded-3xl flex items-center gap-4 animate-bounce-in ${message.type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'}`}>
                                <i data-lucide={message.type === 'success' ? "check-circle" : "alert-circle"}></i>
                                <span className="font-bold text-sm">{message.text}</span>
                            </div>
                        )}

                        {view === 'dashboard' && (
                            <div className="space-y-6">
                                <div className="bg-slate-900 rounded-[2.5rem] p-8 text-white relative overflow-hidden shadow-xl">
                                    <div className="relative z-10">
                                        <h3 className="text-lg font-bold mb-1">Status Kehadiran</h3>
                                        <p className="text-slate-400 text-sm mb-6">Pastikan GPS Anda aktif sebelum melakukan absensi.</p>
                                        <div className="grid grid-cols-2 gap-4">
                                            <button onClick={() => { setAttendanceType('IN'); startCamera(); }} className="bg-emerald-500 hover:bg-emerald-600 p-5 rounded-[2rem] flex flex-col items-center gap-2 transition-all active:scale-95 shadow-lg shadow-emerald-900/20">
                                                <i data-lucide="clock" class="w-6 h-6"></i>
                                                <span className="font-bold text-sm uppercase">Absen Masuk</span>
                                            </button>
                                            <button onClick={() => { setAttendanceType('OUT'); startCamera(); }} className="bg-orange-500 hover:bg-orange-600 p-5 rounded-[2rem] flex flex-col items-center gap-2 transition-all active:scale-95 shadow-lg shadow-orange-900/20">
                                                <i data-lucide="log-out" class="w-6 h-6"></i>
                                                <span className="font-bold text-sm uppercase">Absen Pulang</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div className="absolute -right-10 -bottom-10 w-40 h-40 bg-blue-500/10 rounded-full blur-3xl"></div>
                                </div>

                                {user.role === 'Admin' && (
                                    <button onClick={() => setView('admin')} className="w-full bg-indigo-50 p-6 rounded-[2.5rem] flex items-center gap-5 border border-indigo-100 group transition-all">
                                        <div className="bg-indigo-600 text-white p-4 rounded-2xl group-hover:scale-110 transition-transform">
                                            <i data-lucide="user-plus" class="w-6 h-6"></i>
                                        </div>
                                        <div className="text-left">
                                            <h4 className="font-bold text-slate-800">Panel Admin</h4>
                                            <p className="text-sm text-slate-500">Kelola database karyawan</p>
                                        </div>
                                    </button>
                                )}
                            </div>
                        )}

                        {view === 'camera' && (
                            <div className="flex flex-col h-full bg-slate-900 rounded-[2.5rem] overflow-hidden relative shadow-2xl">
                                <video ref={videoRef} autoPlay playsInline className="w-full h-full object-cover scale-x-[-1]" />
                                <canvas ref={canvasRef} width="640" height="480" className="hidden" />
                                
                                <div className="absolute inset-x-0 bottom-0 p-8 bg-gradient-to-t from-slate-900 to-transparent">
                                    <div className="flex items-start gap-3 mb-8 bg-white/10 backdrop-blur-md p-4 rounded-2xl border border-white/20">
                                        <i data-lucide="map-pin" class="text-red-400 shrink-0 mt-1 w-5 h-5"></i>
                                        <p className="text-xs text-white font-medium">{location.address}</p>
                                    </div>
                                    
                                    <div className="flex justify-between items-center">
                                        <button onClick={() => {
                                            videoRef.current.srcObject.getTracks().forEach(t => t.stop());
                                            setView('dashboard');
                                        }} className="w-14 h-14 rounded-full bg-white/10 flex items-center justify-center text-white backdrop-blur-md"><i data-lucide="x"></i></button>
                                        
                                        <button disabled={loading} onClick={captureAndSubmit} className="w-24 h-24 bg-white rounded-full flex items-center justify-center shadow-[0_0_30px_rgba(255,255,255,0.3)] active:scale-90 transition-all">
                                            {loading ? <div className="animate-spin rounded-full h-8 w-8 border-4 border-blue-600 border-t-transparent"></div> : <div className="w-20 h-20 border-4 border-slate-100 rounded-full bg-blue-600"></div>}
                                        </button>
                                        
                                        <div className="w-14"></div>
                                    </div>
                                </div>
                            </div>
                        )}

                        {view === 'admin' && (
                            <div className="animate-in slide-in-from-bottom-5">
                                <div className="flex items-center justify-between mb-8">
                                    <h3 className="font-bold text-2xl text-slate-800">Input Karyawan</h3>
                                    <button onClick={() => setView('dashboard')} className="text-blue-600 font-bold text-sm bg-blue-50 px-4 py-2 rounded-xl">KEMBALI</button>
                                </div>
                                <form onSubmit={async (e) => {
                                    e.preventDefault();
                                    setLoading(true);
                                    const data = {
                                        action: 'addEmployee',
                                        id: e.target.id.value,
                                        password: e.target.password.value,
                                        nama: e.target.nama.value,
                                        jabatan: e.target.jabatan.value
                                    };
                                    try {
                                        const res = await fetch(APP_SCRIPT_URL, { method: 'POST', body: JSON.stringify(data) });
                                        showMsg('success', 'Karyawan Baru Tersimpan!');
                                        e.target.reset();
                                    } catch (err) { showMsg('error', 'Gagal simpan data'); }
                                    setLoading(false);
                                }} className="space-y-4">
                                    <input name="id" placeholder="ID Karyawan" className="w-full p-4 rounded-2xl bg-slate-50 border-none outline-none focus:ring-2 focus:ring-blue-500" required />
                                    <input name="password" type="password" placeholder="Password" className="w-full p-4 rounded-2xl bg-slate-50 border-none outline-none focus:ring-2 focus:ring-blue-500" required />
                                    <input name="nama" placeholder="Nama Lengkap" className="w-full p-4 rounded-2xl bg-slate-50 border-none outline-none focus:ring-2 focus:ring-blue-500" required />
                                    <select name="jabatan" className="w-full p-4 rounded-2xl bg-slate-50 border-none outline-none focus:ring-2 focus:ring-blue-500" required>
                                        <option value="Staff">Staff</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Manager">Manager</option>
                                    </select>
                                    <button disabled={loading} className="w-full bg-slate-900 text-white py-4 rounded-2xl font-bold flex items-center justify-center gap-2">
                                        {loading ? <div className="animate-spin rounded-full h-5 w-5 border-2 border-white border-t-transparent"></div> : 'SIMPAN DATA'}
                                    </button>
                                </form>
                            </div>
                        )}
                    </div>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
